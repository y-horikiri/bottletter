<h1>Bottletter</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label "名前を入力してください。" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit "かんたん登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>