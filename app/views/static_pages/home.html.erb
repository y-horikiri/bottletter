<div class="row">
  <div class="col-md-9 col-md-offset-3">
    <% if logged_in? %>
    <%= form_with(model: @letter, local: true) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.text_area :content, class: "form-control", placeholder: "どこかの誰かにメッセージを送りましょう。" %>

    <%= f.submit "流す", class: "btn btn-primary" %>
    <% end %>
    <% else %>
    <%= form_with(model: @user, local: true) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.label "名前を入力してください。" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.submit "かんたん登録", class: "btn btn-primary" %>
    <% end %>
    <% end %>
  </div>

  <% if logged_in? %>
  <%= render "layouts/bottle" %>
  <% end %>
</div>